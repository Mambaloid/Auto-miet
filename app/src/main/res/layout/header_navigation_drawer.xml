<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:autofit="http://schemas.android.com/tools"
    android:background="@drawable/login_btn"
    android:orientation="vertical">


    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circular_progress_bar_nav_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        app:cpb_background_progressbar_color="@color/main"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progressbar_color="@color/white"
        app:cpb_progressbar_width="8dp" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/text_view_nav_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/circular_progress_bar_nav_drawer"
        android:layout_alignLeft="@+id/circular_progress_bar_nav_drawer"
        android:layout_alignRight="@+id/circular_progress_bar_nav_drawer"
        android:layout_alignTop="@+id/circular_progress_bar_nav_drawer"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="2"
        android:padding="10dp"
        android:text="Вы\n1 из 100"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        autofit:minTextSize="16sp"/>

</RelativeLayout>